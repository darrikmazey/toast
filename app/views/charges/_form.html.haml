
.section
	.heading
		= "New Charge on #{@debt.name} (#{@debt.description})"
.form.new_charge
	.form_container
		= semantic_form_for [@debt, @charge] do |f|
			.fields_container
				= f.inputs do
					= f.input :event_date, :as => :date
					= f.input :description
					= f.input :amount
			.buttons_container
				= f.buttons
