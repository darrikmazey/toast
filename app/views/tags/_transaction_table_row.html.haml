%div.row{:class => transaction_table_row.type }
	%div.field.first.date
		= transaction_table_row.short_date
	%div.field.description
		= transaction_table_row.description
	%div.field.tags
		=raw tag_string_with_links(transaction_table_row)
	%div.field.amount
		= number_to_currency(transaction_table_row.taggings.find_by_tag_id(@tag.id).amount.abs)
	%div.links
		%div.link
			= link_to 'edit', edit_transaction_url(transaction_table_row)
		%div.link
			= link_to 'delete', transaction_table_row, :method => :delete, :confirm => 'Are you sure?'
